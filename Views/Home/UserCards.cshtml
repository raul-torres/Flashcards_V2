@model List<Card>
<link rel="stylesheet" href="~/css/UserCards.css">


<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/home">
    <img src="~/img/whiteLogo.png" alt="" class="logo">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="text-light nav-item nav-link" href="/newdeck">New Deck</a>
      <a class="text-light nav-item nav-link" href="/alldecks">My Decks</a>
      <a class="text-light nav-item nav-link" href="/quiz">Quiz</a>
      <a class="nav-item nav-link active" href="/everysingledeck">Other Decks <span class="sr-only">(current)</span></a>
      <a class="text-danger nav-item nav-link" href="/logout">Sign Out</a>
    </div>
  </div>
</nav>

<div class="mainBody varela">
  <br>
  <p class="text-center">
    @* <a href="/thispersonsdeck/@ViewBag.DeckId" class="return">&#8592; Go Back</a> *@
    <a href='javascript:history.go(-1)' class="return">Go Back</a>
  </p>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        
          @{
          if(Model.Count == 0)
          {
            <br>
            <br>
            <br>
            <p class="text-center nocards">This deck doesn't have any cards</p>
          }
          foreach(Card C in Model)
          {
              <div class="jumbotron ThisCard">
                  <p class="field">QUESTION:</p>
                  <p class="response">@C.Question</p>
                  <p class="field">ANSWER:</p>
                  <p class="response">@C.Answer</p>
              </div>
          }
      }
    </div>
    <div class="col-md-1"></div>
  </div>

</div>