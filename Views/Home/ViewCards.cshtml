@model List<Card>
<link rel="stylesheet" href="~/css/ViewCards.css">

<nav class="navbar navbar-expand-lg navbar-light bg-light varela">
    <a class="main out nav-link" href="/home">
      <img src="~/img/whiteLogo.png" alt="" class="logo">
    </a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="out nav-link" href="/newdeck">New Deck</a>
      </li>
      <li class="nav-item">
        <a class="active nav-link" href="/alldecks">My Decks</a>
      </li>
      <li class="nav-item">
        <a class="out nav-link" href="/quiz">Quiz</a>
      </li>
      <li class="nav-item active">
        <a class="out nav-link" href="/everysingledeck">Other Decks</a>
      </li>
    </ul>
    <a href="/logout" class="text-right out">Sign Out</a>
    @*  <span class="sr-only">(current)</span> *@
</nav>

<br>
<br>
<p class="text-center">
  <a href="/newcard/@ViewBag.Deck" class="btn btn-success">Add a New Card</a>
</p>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
        @{
        foreach(Card C in Model)
        {
            <div class="jumbotron ThisCard">
                <div class="options">
                    <a href="/deletecard/@C.CardId/@ViewBag.Deck"><img class="trashIcon" src="~/img/delete.png" alt="Delete"></a>
                    <a href="/editcard/@C.CardId"><img class="editIcon" src="~/img/edit.png" alt="Edit">@C.CardId</a>
                </div>
                <hr>
                <p class="field">QUESTION:</p>
                <p class="response">@C.Question</p>
                <p class="field">ANSWER:</p>
                <p class="response">@C.Answer</p>
            </div>
        }
    }
  </div>
  <div class="col-md-1"></div>
</div>